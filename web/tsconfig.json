{
	"compilerOptions": {
		"target": "ES2020",
		"experimentalDecorators": true,
		"useDefineForClassFields": false,
		"module": "ESNext",
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@testdata": ["../test_data"],
			"@testdata/*": ["../test_data/*"],
			"@assets": ["src/assets"],
			"@assets/*": ["src/assets/*"],
			"@domentities": ["src/domain/entities"],
			"@domentities/*": ["src/domain/entities/*"],
			"@dominterfaces": ["src/domain/interfaces"],
			"@dominterfaces/*": ["src/domain/interfaces/*"],
			"@interfaces": ["src/interfaces"],
			"@interfaces/*": ["src/interfaces/*"],
			"@lib": ["src/lib"],
			"@lib/*": ["src/lib/*"]
		},
		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true
	},
	"include": ["src"]
}
